<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SGERepasoMAUI.Views.MapaNativoPage"
             Title="Detalle del Centro">

    <ScrollView>
        <Grid RowDefinitions="350, Auto, Auto, Auto" Padding="0">
            
            <!-- Mapa via WebView (OpenStreetMap - funciona en todas las plataformas) -->
            <WebView x:Name="MapaWebView" 
                     Grid.Row="0"/>

            <!-- Panel de informacion del centro -->
            <Frame Grid.Row="1" 
                   Margin="15,-30,15,10" 
                   Padding="20"
                   BackgroundColor="White"
                   CornerRadius="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="LblNombre" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="#512BD4"/>
                    
                    <Label x:Name="LblTipo" 
                           FontSize="14" 
                           TextColor="#666666"/>
                    
                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,5"/>
                    
                    <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                        <Label Text="Ubicacion:" FontAttributes="Bold" TextColor="#333"/>
                        <Label x:Name="LblMunicipio" Grid.Column="1" TextColor="#666"/>
                    </Grid>
                    
                    <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                        <Label Text="Coordenadas:" FontAttributes="Bold" TextColor="#333"/>
                        <Label x:Name="LblCoordenadas" Grid.Column="1" TextColor="#666" FontSize="12"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Panel del clima actual -->
            <Frame Grid.Row="2" 
                   Margin="15,0,15,10" 
                   Padding="20"
                   BackgroundColor="#E3F2FD"
                   CornerRadius="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Clima Actual" FontSize="16" FontAttributes="Bold" TextColor="#1976D2"/>
                    
                    <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15">
                        <Label x:Name="LblClimaIcono" 
                               FontSize="50" 
                               VerticalOptions="Center"/>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label x:Name="LblTemperatura" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#1976D2"/>
                            <Label x:Name="LblDescripcion" 
                                   FontSize="14" 
                                   TextColor="#666"/>
                            <Label x:Name="LblHumedad" 
                                   FontSize="12" 
                                   TextColor="#888"/>
                        </VerticalStackLayout>
                    </Grid>
                    
                    <ActivityIndicator x:Name="LoadingClima" 
                                       IsRunning="True" 
                                       IsVisible="True"
                                       Color="#1976D2"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Panel de pronostico -->
            <Frame Grid.Row="3" 
                   Margin="15,0,15,15" 
                   Padding="20"
                   BackgroundColor="#FFF3E0"
                   CornerRadius="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Pronostico Proximos Dias" FontSize="16" FontAttributes="Bold" TextColor="#E65100"/>
                    
                    <CollectionView x:Name="ListaPronostico" 
                                    ItemsLayout="HorizontalList"
                                    HeightRequest="120">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10" 
                                       Margin="5,0" 
                                       BackgroundColor="White" 
                                       CornerRadius="10"
                                       WidthRequest="100">
                                    <VerticalStackLayout HorizontalOptions="Center" Spacing="3">
                                        <Label Text="{Binding Dia}" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"/>
                                        <Label Text="{Binding Icono}" 
                                               FontSize="28"
                                               HorizontalOptions="Center"/>
                                        <Label Text="{Binding Resumen}" 
                                               FontSize="11" 
                                               HorizontalOptions="Center" 
                                               TextColor="#333"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <ActivityIndicator x:Name="LoadingPronostico" 
                                       IsRunning="True" 
                                       IsVisible="True"
                                       Color="#E65100"/>
                </VerticalStackLayout>
            </Frame>

        </Grid>
    </ScrollView>
    
</ContentPage>
